<h1><%= @story.hook %></h1>
<p>
  Started on <%= @story.created_at.strftime("%b %d, %Y") %> 
  by <%= @story.users.first.first_name %>
</p>

<p>
    <% @contributions.each do |c| %>
        <%= c.body %>
    <% end %>
</p>


<h3>Continue the story...</h3>
<%= form_for @story.contributions.build do |f| %>
    <%= f.hidden_field :story_id %>
    
    <p>
      <%= f.label :content, "New contribution" %><br>
      <%= f.text_area :body %>
    </p>
    <br/>
    <%= f.submit %>
  <% end %>
